@model Clothing_Store.Models.AddClothViewModel

<h1>Add Student</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price Per Cloth</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>

    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity" />
    </div>

    <div class="mt-3">
        <label class="form-label">ClothImage</label>
        <input type="text" class="form-control" asp-for="ClothImage" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>